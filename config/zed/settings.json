{
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_line_height": { "custom": 1.4 },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Kanagawa Wave"
  },
  "icon_theme": "Catppuccin Frapp√©",
  "indent_guides": {
    "coloring": "indent_aware",
    "active_line_width": 2
  },
  "project_panel": {
    "entry_spacing": "standard"
  },
  "terminal": {
    "shell": {
      "with_arguments": {
        "program": "fish",
        "args": ["--interactive"]
      }
    }
  },
  "languages": {
    "Nix": {
      "tab_size": 2
    }
  }
}
